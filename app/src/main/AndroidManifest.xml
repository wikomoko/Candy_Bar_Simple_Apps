<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.candybar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_candybar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_candybar_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CandyBar">
        <activity android:name=".SplashScreen" android:screenOrientation="portrait" android:theme="@style/Theme.CandyBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".successPage"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CandyBar"></activity>
        <activity
            android:name=".orderPage"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CandyBar.custom"></activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>